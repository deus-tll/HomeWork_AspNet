@page "/Product/DeleteProduct/{id}"
@model InternetShop.Pages.Product.DeleteProductModel
@{
    ViewData["Title"] = "Delete a Product";
}

<section class="main-section">
    <div class="container">
        <div class="section-title">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="row">
            <div class="text-center">
                <p>Are you sure you want to delete the following book?</p>
                <p>@Model.Product.Name [by @Model.Product.Brand]</p>
                <p><strong>Description: </strong>@Model.Product.Description</p>

                <form method="post">
                    <input type="hidden" asp-for="@Model.Product.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="/Product/AboutProduct" asp-route-id="@Model.Product.Id" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</section>