@page "/Product/EditProduct/{id}"
@model InternetShop.Pages.Product.EditProductModel
@{
    ViewData["Title"] = "Edit a Product";
}

<section class="main-section">
    <div class="container">

        <div class="section-title">
            <h2>@ViewData["Title"]</h2>
        </div>

        <form method="post">
            <input type="hidden" name="Product.Id" asp-for="Product.Id" />

            <partial name="ProductForm" for="Product" />

            <div class="text-center pt-5">
                <button class="btn btn-submit" type="submit">Save</button>
            </div>
        </form>

    </div>
</section>