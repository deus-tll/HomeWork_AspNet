@model List<ApplicationUser>
@{
    ViewData["Title"] = "Home";
}


<section class="main-section">
    <div class="container">

        @Html.SectionTitle("Admin Panel")

        <div class="row">
            <div class="text-center">
                <a asp-action="CreateUser" class="btn btn-success">Create New User</a>
            </div>
        </div>

        <div class="row">
            <table class="table table-striped table-dark">
                <thead>
                    <tr class="text-center">
                        <th>Username</th>
                        <th>Email</th>
                        <th>Year of Birth</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="text-center">
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.YearOfBirth</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</section>