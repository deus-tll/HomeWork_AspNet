@model ApplicationUser
@{
    ViewData["Title"] = "Delete User";
}

<section class="main-section">
    <div class="container">

        @if (ViewData["Title"] is string title && !string.IsNullOrEmpty(title))
        {
            @Html.SectionTitle(title)
        }

        <div class="row">
            <p>Are you sure you want to delete this user?</p>

            <dl class="row">
                <dt class="col-sm-2">UserName:</dt>
                <dd class="col-sm-10">@Model.UserName</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Model.Email</dd>
            </dl>
            
            <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
                <div class="row justify-content-center mt-5">
                    <button type="submit" class="btn btn-danger w-25 m-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary w-25 m-2">Cancel</a>
                </div>
            </form>
        </div>

    </div>
</section>