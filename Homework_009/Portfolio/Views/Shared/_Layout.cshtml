<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <partial name="~/Views/Shared/StylesPartial/_VendorStylesPartial.cshtml" />
    <partial name="~/Views/Shared/StylesPartial/_ViewsStylesPartial.cshtml" />

</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1 class="logo me-auto me-lg-0"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">STASIA</a></h1>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="AdditionalInfo">Additional Info</a></li>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="Courses">Courses</a></li>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="Portfolio">Portfolio</a></li>
                    <li><a class="nav-link main-nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
            <div class="header-social-links">
                <a href="https://m.facebook.com/profile.php?id=100023379161377&v=info&ref=ig_profile_no_ac&funlid=PB5wRtCrtiVxoX0h" target="_blank" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="https://www.instagram.com/stasia_pm" target="_blank" class="instagram"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </header>

    <div>
        <main id="main" role="main">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright 2023 <strong><span>Stasia</span></strong>. All Rights Reserved
            </div>
        </div>
    </footer>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <partial name="~/Views/Shared/ScriptsPartial/_ValidationScriptsPartial.cshtml" />
    <partial name="~/Views/Shared/ScriptsPartial/_VendorScriptsPartial.cshtml" />
    <partial name="~/Views/Shared/ScriptsPartial/_ProjectScriptsPartial.cshtml" />


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
