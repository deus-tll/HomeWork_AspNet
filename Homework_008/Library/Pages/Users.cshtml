@page
@model Library.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}

<section class="main-section">
    <div class="container">
        <div class="section-title">
            <h2>Users</h2>
        </div>

        <p><a asp-page="/Register" class="btn btn-submit">Register New User</a></p>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nickname</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Nickname</td>
                        <td>@user.Email</td>
                        <td>

                            <div class="row">
                                <div class="col-lg-6">
                                    <a asp-page="/EditUser" asp-route-id="@user.Id" class="btn btn-submit w-100">Edit</a>
                                </div>
                                <div class="col-lg-6">
                                    <a asp-page="/DeleteUser" asp-route-id="@user.Id" class="btn btn-submit w-100">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>