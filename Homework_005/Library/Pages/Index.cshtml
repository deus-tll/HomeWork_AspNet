@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<section class="about">
    <div class="container">

        <div class="section-title">
            <h2>Library Of Comics</h2>
        </div>

        <div class="row">
            <div class="list-group list-group-light">
                @if (Model.Comics is not null)
                {
                    @foreach (var comic in Model.Comics)
                    {
                        <a href="/About/@comic.Id" class="list-group-item list-group-item-action px-3 border-0 text-center">(@comic.Title)</a>
                    }
                }
            </div>
        </div>

    </div>
</section>