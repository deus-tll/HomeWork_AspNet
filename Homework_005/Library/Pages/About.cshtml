@page "/About/{id}"
@model Library.Pages.AboutModel
@{
    ViewData["Title"] = "About Comic";
}


<section class="about">
    <div class="container">

        <div class="section-title">
            <h2>About Comic</h2>
        </div>

        <div class="row">
            <div class="col-lg-5">
                <img src="@Model.Comic.ComicCover?.CoverPath" class="img-fluid h-100 w-100" alt="">
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0 content">
                <h3>@Model.Comic.Title</h3>
                <p class="fst-italic">

                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><strong>On Sale Date:</strong> @Model.Comic.OnSaleDate</li>
                            <li><strong>Page Count:</strong> @Model.Comic.PageCount</li>
                            <li><strong>Format:</strong> @Model.Comic.Format</li>
                            @if (Model.Comic.Prices is not null)
                            {
                                @foreach (var price in Model.Comic.Prices)
                                {
                                    <li><strong>@price.Type:</strong> @price.Value</li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            @if (Model.Comic.Creators is not null)
                            {
                                @foreach (var creator in Model.Comic.Creators)
                                {
                                    <li><strong>@creator.Role:</strong> @creator.Name</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <p><strong>Description: </strong>@Html.Raw(Model.Comic.Description)</p>
            </div>
        </div>

    </div>
</section>