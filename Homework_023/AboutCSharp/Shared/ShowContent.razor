<section class="main-section">
    <div class="container">

        <div class="section-title">
            <h2>@SectionTitle</h2>
        </div>

        <div class="row">
            @if (MainContentViewModel?.ContentBlocks is not null)
            {
                @foreach (var contentBlock in MainContentViewModel.ContentBlocks)
                {
                    <h3>@contentBlock.Header</h3>

                    <br class="line-break">

                    <p>@(new MarkupString(@contentBlock.TextContent))</p>

                    <br class="line-break">
                    <br class="line-break">
                    <br class="line-break">
                }
            }
        </div>

    </div>
</section>

@code {
    [Parameter]
    public string SectionTitle { get; set; } = string.Empty;

    [Parameter]
    public MainContentViewModel? MainContentViewModel { get; set; }
}
