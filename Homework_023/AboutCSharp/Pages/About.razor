@page "/about"
@inject ContentHandlerService ContentService

<PageTitle>@_title</PageTitle>

<ShowContent MainContentViewModel="_mainContentViewModel" SectionTitle="@_title" />


@code {
    private MainContentViewModel? _mainContentViewModel;
    private string _title = "About Language";

    protected override async Task OnInitializedAsync()
    {
        _mainContentViewModel = await ContentService.CreateMainContentViewModelAsync(ContentHandlerService.NecessaryFiles.ABOUT_CONTENT_PATH);
    }
}